    <!-- Увеличенный отступ сверху -->

    <!-- Логотип приложения -->

    <!-- Кнопка "Вход" -->

    <TextView
        android:id="@+id/fragment_main_auth_textView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Eculum"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main_auth_imageView_logo" />

    <ImageView
        android:id="@+id/fragment_main_auth_imageView_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="156dp"
        android:src="@drawable/outline_school_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/fragment_main_auth_button_signIn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#FF28528F"
        android:text="Log in"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main_auth_textView_logo" />



    <!-- Кнопка "Регистрация" -->
    <Button
        android:id="@+id/fragment_main_auth_button_register"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF28528F"
        android:text="Sign up"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main_auth_button_signIn" />


</androidx.constraintlayout.widget.ConstraintLayout>

